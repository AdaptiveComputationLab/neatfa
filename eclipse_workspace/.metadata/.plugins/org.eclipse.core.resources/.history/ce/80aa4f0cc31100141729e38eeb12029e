#include "PheromoneWaypoint.h"

Real PheromoneWaypoint::exponentialDecay(Real quantity, Real time, Real lambda) {
	return (quantity * exp(-lambda * time));
}

PheromoneWaypoint::PheromoneWaypoint(CVector2 location, size_t time, Real decay, Real weight) {
	this->location = location;
	this->lastUpdate = time;
	this->decay = decay;
	this->weight = weight;
}

PheromoneWaypoint::~PheromoneWaypoint() {
	/* Not needed. */
}

bool PheromoneWaypoint::update(size_t time) {
	weight = exponentialDecay(weight, time - lastUpdate, decay);
	return false;
}
